<div class="mt-4">
    <h2>Tạo tài khoản</h2>
    <form method="POST" action="/users/store">
        <div class="form-group">
            <label>Tên tài khoản<span>*</span></label>
            <input type="text" name="username" class="form-control" placeholder="Tên tài khoản" value="{{data.username}}">
        </div>
        <div class="form-group">
            <label>Mật khẩu<span>*</span></label>
            <input type="password" name="password" class="form-control" placeholder="Mật khẩu">
        </div>
        <div class="form-group">
            <label>Họ và tên<span>*</span></label>
            <input type="text" name="name" class="form-control" placeholder="Họ và tên" value="{{data.name}}">
        </div>
        <div class="form-group">
            <label>Số điện thoại<span>*</span></label>
            <input type="text" name="phone" class="form-control" placeholder="Số điện thoại" value="{{data.phone}}">
        </div>
        {{#if err}}
            <div class="alert alert-danger" role="alert">
                {{err}}
            </div>
        {{/if}}
        {{#if alert}}
            <div class="alert alert-{{alert.type}}" role="alert">
                {{alert.notification}}
            </div>
        {{/if}}
        <button type="submit" class="btn btn-primary">Tạo tài khoản</button>
    </form>
</div>