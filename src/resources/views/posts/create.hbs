<div class="mt-4">
    <h2>Tạo bài đăng</h2>
    <form method="POST" action="/posts/store">
        <div class="form-group">
            <label for="exampleInputTitle1">Tiêu đề bài viết</label>
            <input type="text" name="name" class="form-control" id="exampleInputTitle1" placeholder="Nhập tiêu đề">
        </div>
        <div class="form-group">
            <label for="exampleInputThumbnail1">Thumbnail bài viết</label>
            <input type="text" name="thumbnail" class="form-control" id="exampleInputThumbnail1"  placeholder="Nhập link thumbnail">
        </div>
        <div class="form-group">
            <label for="exampleInputDescription1">Mô tả bài viết</label>
            <textarea type="text" name="description" class="form-control" id="exampleInputDescription1" placeholder="Nhập mô tả"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Đăng bài</button>
    </form>
</div>