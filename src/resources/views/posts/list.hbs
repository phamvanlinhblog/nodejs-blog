<div class="mt-4">
    <table class="table">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Tên</th>
            <th scope="col">Ngày tạo</th>
            <th scope="col"></th>
            <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each posts}}
                <tr>
                    <th scope="row">{{sum @index 1}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.createdAt}}</td>
                    <td><a href="/posts/{{this._id}}/update">Sửa</a></td>
                    <td><a href="/posts/{{this._id}}/delete">Xóa</a></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>